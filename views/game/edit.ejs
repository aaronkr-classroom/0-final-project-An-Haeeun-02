<main class="game-profile">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
      <div class="pt-5">
        <h1>
          User Data for <%= game.name %>
          <span class="btn btn-outline-danger">Editing</span>
        </h1>
  
        <div class="row">
          <!-- ÏÇ¨Ïö©Ïûê Ìé∏Ïßë Ìèº Ï∂úÎ†• -->
          <div class="col col-lg-10">
            <form
              class="user-edit-form mb-3"
              method="POST"
              action="<%= `/games/${game._id}/update?_method=PUT` %>"
            >
              <table class="table table-striped table-hover mt-5 mb-5">
                <!-- ÏÇ¨Ïö©Ïûê Îç∞Ïù¥ÌÑ∞Î•º Î≥¥Ïó¨Ï£ºÍ∏∞ ÏúÑÌïú ÌÖåÏù¥Î∏î Ï∂îÍ∞Ä -->
                <tbody>
                  <tr>
                    <th scope="col">name</th>
                    <td colspan="2" class="pt-0 pb-0 px-0">
                      <input
                        type="text"
                        name="name"
                        id="inputName"
                        class="form-control"
                        value="<%= game.name %>"
                        placeholder="name"
                        autofocus
                      />
                    </td>
                  </tr>
                  <tr>
                    <th scope="col">Creater</th>
                    <td colspan="2" class="pt-0 pb-0 px-0">
                      <input
                        type="text"
                        name="creater"
                        id="inputCreater"
                        class="form-control"
                        value="<%= game.creater %>"
                        placeholder="creater"
                        autofocus
                      />
                    </td>
                  </tr>
                  <tr>
                    <th scope="col">Link</th>
                    <td colspan="2" class="pt-0 pb-0 px-0">
                      <input
                        type="url"
                        name="link"
                        class="form-control"
                        id="inputLink"
                        value="<%= game.link %>"
                        placeholder="Link"
                        required
                      />
                    </td>
                  </tr>
                  <tr>
                    <th scope="col">Type</th>
                    <td colspan="2" class="pt-0 pb-0 px-0">
                      <select id="type" name="type" class="form-control" required>
                        <option value="mode" <%= game.type === 'mode' ? 'selected' : '' %>>Î™®Îìú</option>
                        <option value="retexture" <%= game.type === 'retexture' ? 'selected' : '' %>>Î¶¨ÌÖçÏä§Ï≥ê</option>
                        <option value="expansion" <%= game.type === 'expansion' ? 'selected' : '' %>>ÌôïÏû•</option>
                      </select>
                    </td>
                  </tr>
                </tbody>
              </table>
              <button type="submit" class="btn btn-info">üíæ Update User</button>
              <a href="/games/<%= game._id %>" class="btn btn-danger"
                >‚ùå Cancel</a
              >
            </form>
          </div>
        </div>
  
        <div class="row">
          <div class="col col-lg-10 offset-lg-2">
  
            <a href="/games" class="btn btn-primary">‚Üê Back to game</a>
            <a
              href="/games/<%= game._id %>/delete?_method=DELETE"
              onclick="return confirm('Are you sure you want to delete this record?')"
              class="btn btn-danger"
              role="button"
              >üóëÔ∏è Delete Mode</a
            >
          </div>
        </div>
      </div>
    </div>
  </main>
  